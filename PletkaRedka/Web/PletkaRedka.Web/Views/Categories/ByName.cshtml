@model PletkaRedka.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

<h3 class="display-4 text-md-center">@Model.Name</h3>
<br />
<div class="text-secondary text-lg-center">
    @Model.Description описание на категорията, какви постове да се качват в нея
</div>
<br />
<br />

@foreach (var post in Model.Posts)
{
<div class="media-body col-9">
    <h5 class="media-heading">@post.Name</h5>
    <div class="list-group">
        <a href="o" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center list-group-item-primary">
            <p>@post.ShortContent</p>
            <span class="badge badge-primary badge-pill">@post.CommentsCount коментара</span>
        </a>
    </div>
    <p class="text-sm-left">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M12 1H4a1 1 0 0 0-1 1v10.755S4 11 8 11s5 1.755 5 1.755V2a1 1 0 0 0-1-1zM4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4z" />
            <path fill-rule="evenodd" d="M8 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
        </svg>@post.UserUserName <span class="text-sm-right"><i class="far fa-clock"></i>@post.CreatedOn</span>
    </p>
    <br />
</div>
}
