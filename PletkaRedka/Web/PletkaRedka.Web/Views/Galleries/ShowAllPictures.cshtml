@model PletkaRedka.Web.ViewModels.Galleries.ShowPicturesViewModel
@{
    this.ViewData["Title"] = "Снимки";
}

<h2 class="text-center mt-1">@this.ViewData["Title"]</h2>

<div class="container align-center mt-2">
    <div class="row">
        @foreach (var picture in Model.Galleries)
        {
            <div class="media m-sm-1 col-sm-5 m-md-3">
                <img src="@picture.ImageUrl" width="250" class="mr-5">
                <div class="media-body">
                    <p>@picture.Description</p>
                </div>
            </div>
        }
    </div>
</div>
