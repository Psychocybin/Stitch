@model PletkaRedka.Web.ViewModels.Videos.CreateVideoInputModel
@{
    this.ViewData["Title"] = "Добави видео";
}

<div class="media-body col-9 mb-4">
    <h2>@this.ViewData["Title"]</h2>
</div>

<form asp-action="Create" method="post">
    <div class="media-body col-9 mb-2">
        <label asp-for="Name">Заглавие</label>
        <input asp-for="Name" class="form-control border-info" />
        <span asp-validation-for="Name" class="text-danger">Полето е задължително!</span>
    </div>
    <div class="media-body col-9 mb-2">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control border-info" rows="6"></textarea>
        <span asp-validation-for="Description" class="text-danger">Полето е задължително!</span>
    </div>
    <div class="media-body col-9 mb-2">
        <label asp-for="VideoUrl">Копирай линк от YouTube.com тук</label>
        <input asp-for="VideoUrl" class="form-control border-info" />
        <span asp-validation-for="VideoUrl" class="text-danger">Полето е задължително!</span>
    </div>
    <div class="media-body col-9 mb-2">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()))" class="form-control border-info"></select>
        <span asp-validation-for="CategoryId" class="text-danger">Полето е задължително!</span>
    </div>
    <div class="media-body col-9 mt-3">
        <input type="submit" class="btn btn-primary" value="Потвърди" />
    </div>
</form>