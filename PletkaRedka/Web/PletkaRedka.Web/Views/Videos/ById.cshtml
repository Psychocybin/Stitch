@model PletkaRedka.Web.ViewModels.Videos.ShowAllVideos
@{
    this.ViewData["Title"] = "Видеа";
}

<h2 class="text-center mt-2 mb-4">@this.ViewData["Title"]</h2>

<div class="container-fluid">
    <div class="row">
        @foreach (var video in Model.Videos)
        {
            <div class="col-sm-6 mt-2">
                <div class="blog_inner_matter">
                    <div class="youtube">
                        <iframe width="300" src="@video.VideoUrl" frameborder="0" class="wow fadeInDown animated"></iframe>
                    </div>
                    <h3 class="wow fadeInDown animated"><a>@video.Name</a></h3>
                    <p class="wow fadeInDown animated">@video.Description</p>
                </div>
            </div>
        }
    </div>
</div>