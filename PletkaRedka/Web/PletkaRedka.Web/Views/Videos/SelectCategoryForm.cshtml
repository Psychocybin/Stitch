@model PletkaRedka.Web.ViewModels.Videos.SelectCategoryViewModel
@{
    this.ViewData["Title"] = "Избери категория";
}

<h2 class="text-center mt-1 mb-5">@this.ViewData["Title"]</h2>

<form asp-action="ById">
    <div class="media-body col-9 mb-2">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()))" class="form-control border-info"></select>
        <span asp-validation-for="CategoryId" class="text-danger">Полето е задължително!</span>
    </div>
    <div class="media-body col-9 mt-5">
        <input type="submit" class="btn btn-primary" value="Потвърди"/>
    </div>
</form>