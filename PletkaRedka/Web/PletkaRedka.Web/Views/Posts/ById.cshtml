@model PletkaRedka.Web.ViewModels.Posts.PostViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

<div class="media border border-info rounded col-9">
    <img src="/snimka2.jpg" width="100" class="mr-3" alt="TEST">
    <div class="media-body">
        <h5 class="mt-0">@Model.Name</h5>
        @Model.Content
    </div>
    <div class="text-muted ml-3">
        <div class="list-group-item-action">
            <div>
                <a href="#" onclick="sendVote(@Model.Id, true)">
                    <i class="fa fa-thumbs-up"></i>
                </a>
            </div>
            <div id="votesCount">@Model.VotesCount</div>
            <div>
                <a href="#" onclick="sendVote(@Model.Id, false)">
                    <i class="fa fa-thumbs-down"></i>
                </a>
            </div>
        </div>
    </div>
</div>
<p class="text-sm-left">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M12 1H4a1 1 0 0 0-1 1v10.755S4 11 8 11s5 1.755 5 1.755V2a1 1 0 0 0-1-1zM4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4z" />
        <path fill-rule="evenodd" d="M8 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
    </svg>@Model.UserUserName &nbsp;<span class="text-sm-right"><i class="far fa-clock"></i>@Model.CreatedOn</span>
</p>

@section Scripts{
    <script>
        function sendVote(postId, isUpVote) {
            var token = $("#votesForm input[name=__RequestVerificationToken]").val();
            var json = { postId: postId, isUpVote: isUpVote };
            $.ajax({
                url: "/api/votes",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                headers: { 'X-CSRF-TOKEN': token },
                success: function (data) {
                    $("#votesCount").html(data.votesCount);
                }
            });
        }
    </script>
}