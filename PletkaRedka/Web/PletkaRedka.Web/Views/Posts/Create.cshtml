@model PletkaRedka.Web.ViewModels.Posts.PostCreateInputModel
@{ 
    this.ViewData["Title"] = "Нов Пост";
}

<div class="media-body col-9">
    <h2>@this.ViewData["Title"]</h2>
</div>
<br/>
<form asp-action="Create" method="post">
    <div class="media-body col-9">
        <label asp-for="Name">Заглавие</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger">Полето "Заглавие" е задължително!</span>
    </div>
    <div class="media-body col-9">
        <label asp-for="Content">Съдържание</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger">Полето "Съдържание" е задължително!</span>
    </div>
    <div class="media-body col-9">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()))" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger">Полето "Категория" е задължително!</span>
    </div>
    <br />
    <div class="media-body col-9">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>